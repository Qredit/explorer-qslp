<div class="container mh">
	<div class="col-lg-12 col-12">
		<div class="box">
			<div class="box-header with-border">
				<h4 class="box-title">Delegate Monitor</h4>
			</div>
			<div class="box-body">
				<div class="table-responsive">
					<table class="table no-margin table-hover">
						<thead>
							<tr>
								<th scope="col">Rank</th>
								<th scope="col">Username</th>
								<th scope="col">Status</th>
								<th scope="col">Last Forged</th>
								<th scope="col">Approval</th>
								<th scope="col">Votes</th>
							</tr>
						</thead>
						<tbody id='delegates'></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>
</div>{% include '/cards/footer.twig' %}{% endblock %}{% block javascripts %}
<script>$(document).ready(function () {


		var socket = io();

		socket.emit('getdelegates', {});

		socket.on('showdelegates', function (data) {

			var mainTable = document.getElementById("delegates");

			var tr,
				td;

			data.forEach(function (row) {

				tr = document.createElement("tr");

				td = document.createElement("td");
				td.innerHTML = row.rank;
				tr.appendChild(td);

				td = document.createElement("td");
				td.innerHTML = '<a href="/qredit/wallet/' + row.address + '">' + row.username + '</a>';
				tr.appendChild(td);


				td = document.createElement("td");
				td.innerHTML = getStatus(row.timestamp);
				tr.appendChild(td);

				td = document.createElement("td");
				td.innerHTML = timeDifference(row.timestamp);
				tr.appendChild(td);
				delegates.appendChild(tr);

				td = document.createElement("td");
				td.innerHTML = row.approval + ' %';
				tr.appendChild(td);

				td = document.createElement("td");
				td.innerHTML = row.votes + ' XQR';
				tr.appendChild(td);

			});

		});

	});


	function timeDifference(datetime) {

		var d = new Date();
		var current = d.getTime();
		var previous = Date.parse(datetime);

		var msPerMinute = 60 * 1000;
		var msPerHour = msPerMinute * 60;
		var msPerDay = msPerHour * 24;
		var msPerMonth = msPerDay * 30;
		var msPerYear = msPerDay * 365;

		var elapsed = current - previous;

		if (elapsed < msPerMinute) {
			return Math.round(elapsed / 1000) + ' sec. ago';
		} else if (elapsed < msPerHour) {
			return Math.round(elapsed / msPerMinute) + ' min. ago';
		} else if (elapsed < msPerDay) {
			return Math.round(elapsed / msPerHour) + ' hrs. ago';
		} else if (elapsed < msPerMonth) {
			return 'approximately ' + Math.round(elapsed / msPerDay) + ' days ago';
		} else if (elapsed < msPerYear) {
			return 'approximately ' + Math.round(elapsed / msPerMonth) + ' months ago';
		} else {
			return 'approximately ' + Math.round(elapsed / msPerYear) + ' yrs. ago';
		}
	}

	function getStatus(datetime) {

		var d = new Date();
		var current = d.getTime();
		var previous = Date.parse(datetime);

		var msPerMinute = 60 * 1000;
		var msPerHour = msPerMinute * 60;
		var msPerDay = msPerHour * 24;
		var msPerMonth = msPerDay * 30;
		var msPerYear = msPerDay * 365;

		var elapsed = (current - previous) / 1000;

		if (elapsed < (16 * 60)) {
			return '<span class="badge badge-success">Forging</span>';
		} else if (elapsed < (24 * 60)) {
			return '<span class="badge badge-warning">Missed Block</span>';
		} else {
			return '<span class="badge badge-danger">Not Forging</span>';
		}

	}</script>{% endblock %}