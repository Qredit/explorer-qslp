<script type="text/javascript">

    $(document).ready(function () {

        var socket = io();
        socket.emit('dswipegetlastblock', {});
        socket.on('dswipeshowlastblock', function (data) {

            $('#getlastblockheight').html(data.getlastblockheight);
            $('#getlastforgedusername').html(data.getlastforgedusername);

        });

        $.get( 
            "https://dapi.swipechain.org/api/blockchain",
            function (data) {
                  console.log(data);
                  $( "#supply" ).text( data.data.supply.toString().substring(0,9).replace(/\B(?=(\d{3})+(?!\d))/g, ",") + " SXP" );
                  
                }
        );

    });
</script>