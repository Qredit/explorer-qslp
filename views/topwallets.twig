{% extends '/blocks/main.twig' %}

{% block body %}
{% include '/blocks/menu.twig' %}
{% include '/cards/heading1.twig' %}

<div class="container mh">
	<div class="col-lg-12 col-12">
		<div class="box">
			<div class="box-header with-border">
				<h4 class="box-title">Top Wallets</h4>
			</div>
			<div class="box-body">
				<div class="table-responsive">
					<table class="table no-margin table-hover">
						<thead>
							<tr>
								<th scope="col">Delegate</th>
								<th scope="col">Address</th>
								<th scope="col">Balance</th>
							</tr>
						</thead>
						<tbody id='topwallet'></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

</div>{% include '/cards/footer.twig' %}{% endblock %}{% block javascripts %}
<script>$(document).ready(function () {


		var socket = io();

		socket.emit('gettopwallets', {});

		socket.on('showtopwallets', function (data) {

			var mainTable = document.getElementById("topwallet");
			var tr,
				td;

			data.forEach(function (row) {

				tr = document.createElement("tr");

				td = document.createElement("td");
				td.innerHTML = row.isdelegate;
				tr.appendChild(td);

				td = document.createElement("td");
				td.innerHTML = '<a href="/wallet/' + row.address + '">' + row.address + '</a>';
				tr.appendChild(td);

				td = document.createElement("td");
				td.innerHTML = (parseFloat(row.balance) / 100000000).toFixed(0) + ' XQR';
				tr.appendChild(td);

				topwallet.appendChild(tr);

			});

		});

	});</script>{% endblock %}